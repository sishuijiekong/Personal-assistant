<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:padding="3dp"
            android:id="@+id/item_list_view2_pic1"
            android:layout_width="150dp"
            android:layout_height="match_parent" />
            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/item_list_view2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="晚报：大耻度妹子拍摄触手play 只穿内衣被活章鱼压身下！"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_list_view2_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发表于：2016-15-20"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/item_list_view2_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="来自：闽南日报"/>



        </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>