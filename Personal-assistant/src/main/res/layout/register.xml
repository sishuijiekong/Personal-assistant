<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/ciyibackpic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/register_cancel"
            android:background="@drawable/chevrondoubleleft"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/register_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册随身小助手"/>
    </RelativeLayout>

    <TextView
        android:padding="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="欢迎加入随身小助手"/>

    <LinearLayout
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <EditText
        android:id="@+id/register_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名（昵称）"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/register_pwd"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/register_pwd2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入确认密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/register_email"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    <EditText
        android:inputType="phone"
        android:id="@+id/register_tel"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入电话号码"/>

    </LinearLayout>
    <Button
        android:id="@+id/register_sure"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#27ba27"
        android:text="确认注册"/>

    <TextView
        android:id="@+id/agreement"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree_user_agreement"/>
    </LinearLayout>



